<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNameCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Лента"
        android:textColor="#333333"
        android:textSize="20sp"
        tools:fontFamily="@font/roboto_bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/cvImageCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNameCard"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/ivImageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:maxHeight="112dp"
            android:minHeight="112dp"
            android:minWidth="180dp"
            android:src="@drawable/card_lenta" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Супермаркеты"
        android:layout_below="@id/cvImageCard"
        android:layout_marginLeft="17dp"
        android:textColor="#9B9B9B"
        />

    <TextView
        android:id="@+id/tvSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvImageCard"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26sp"
        android:textColor="@color/colorAccent"
        android:text="Скидка 10%"/>
</RelativeLayout>
